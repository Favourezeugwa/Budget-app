<%= form_with(model: expense, url: expenses_path) do |form| %>
  <% if expense.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, placeholder: 'Enter name'%>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div class="field mb-4">
    <%= form.label :category, class: "block text-gray-700 text-m font-bold mb-2" %>
    <%= form.collection_select :category_id, 
    Category.where("user_id = ?", current_user.id).order(:name), :id, :name, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.submit 'Save Expense'%>
  </div>
<% end %>

