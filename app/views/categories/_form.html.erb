  <%= form_with(model: category) do |form| %>
    <% if category.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul>
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field mt-4">
      <%= form.text_field :name, class:'form-control', placeholder: "Name" %>
    </div>

    <div class="field mt-4">
      <%= form.label :icon, class: "block text-gray-700 text-m font-bold mb-2" %>
      <%= form.select :icon, [
        ["Family", "family-icon.png"],["Bills", "bills-icon.png" ],["Groceries", "groceries-icon.png"],
        ["Shopping", "shopping-icon.png"],["Health", "health-icon.png"], ["Transport", "transport-icon.png"],
        ["Restaurant", "restaurant-icon.png"],["Education", "education-icon.png"], ["Holiday", "holiday-icon.png"],
        ["Investment", "investment-icon.png"], ["Others", "others-icon.png"]
        ], class:'form-control', placeholder: "Icon" %>
    </div>

    <div class="field mt-4">
      <%= form.text_field :description, class:'form-control', placeholder: "Description" %>
    </div>

    <div class="field mt-4">
      <%= form.submit 'Submit', class:'form-control' %>
    </div>
  <% end %>
